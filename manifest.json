{
	"name":"BGChanger",
	"version":"0.1",
	"manifest_version":2,
	"description":"Change background color of web page",
	"icons":{
			"16":"icon_19.png",
			"48":"icon_48.png",
			"128":"icon_128.png"
	},
	"content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery.min.js", "content.js"]
    }
  ],
	"background":{
		"scripts":["background.js"]
	},
	"browser_action":{
		"default_title":"BGChanger",
		"default_icon":"icon_19.png"
	},
	"options_page": "options.html",
	"permissions":[
	"background",
	"tabs",
	"http://*/*",
	"https://*/*"
	]
}